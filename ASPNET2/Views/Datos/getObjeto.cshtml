@{
}

<table border="1">
    <tr>
        <td>ID </td>
        <td>@ViewBag.producto.Id</td>
    </tr>
    <tr>
        <td>Nombre </td>
        <td>@ViewBag.producto.nombre</td>
    </tr>
    <tr>
        <td>Precio </td>
        <td>@ViewBag.producto.precio</td>
    </tr>
    <tr>
        <td>Cantidad </td>
        <td>@ViewBag.producto.cantidad</td>
    </tr>
    <tr>
        <td>Imagen </td>
        <td><img src="~/imagenes/@ViewBag.producto.imagen" /></td>
    </tr>
    <tr>
        <td>Total</td>
        <td>@(ViewBag.producto.cantidad * ViewBag.producto.precio)</td>
    </tr>
</table>